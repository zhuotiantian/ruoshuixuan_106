@import "../../static/style/common.wxss";
.title {
  padding: 0 4vmin 0 4vmin;
  width: calc(100% - 30px);
  background: #173771;
  color: white;
  z-index: 999;
  height: 14vmin;
  line-height: 14vmin;
}
.title > .content {
  display: flex;
  justify-content: space-between;
}
.left {
  flex: 4;
  text-align: left;
}
.center {
  flex: 2;
  display: flex;
  align-items: center;
  justify-content: center;
}
.right {
  flex: 4;
  text-align: right;
}

.startAnswerText {
  font-size: 24px;
}
