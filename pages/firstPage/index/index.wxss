/**index.wxss**/
.background {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: -1;
}
.top-image {
  width: 100%;
  height: 240rpx;
}
swiper {
  margin-bottom: 15px;
  height: 240rpx;
}
.dialog .weui-dialog {
  min-width: 50%;
}
.dialog .weui-dialog__btn {
  color: #f8b551;
}
.middle {
  display: flex;
  height: 160rpx;
  width: 100%;
  border-radius: 18rpx;
  justify-content: center;
  background: white;
  align-items: center;
  font-size: 24rpx;
  margin-bottom: 15px;
}
.middle .icon {
  height: 50rpx;
  width: 50rpx;
  background-repeat: no-repeat;
  margin-bottom: 24rpx;
}
.middle .item,
.shareBtn {
  flex: 1;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.shareBtn {
  background: transparent;
  border: none;
  font-size: 24rpx;
  color: #333;
  padding: 0;
  margin: 0;
}
.shareBtn::after {
  border: none;
}
.shareBtn .share {
  margin-bottom: 24rpx;
  position: relative;
  top: 15rpx;
}
.flex-span {
  flex: 1;
}

.gameList {
  color: white;
  width: 100%;
  font-size: 20rpx;
}
.gameList .ul {
  display: grid;
  grid-template-columns: 22% 22% 22% 22%;
  grid-template-rows: 30% 30% 30%;
  justify-content: center;
  align-items: center;
  grid-gap: 30rpx;
  height: 100%;
}
.gameList .gameList-item {
  display: flex;
  flex-direction: column;
  background: white;
  color: #303133;
  text-align: center;
  height: 100%;
  border-radius: 4px;
  border: 2px solid #303133;
  justify-content: center;
  align-items: center;
}
.item {
  height: 116rpx;
  width: 116rpx;
  margin: 0 auto;
}
