.container {
  background: #f7f7f7;
  height: 100%;
  width: 100%;
  padding: 0;
}
.header {
  height: 250rpx;
  background: #173771;
  color: white;
  display: flex;
  align-items: center;
  font-size: 34rpx;
  padding: 0 32rpx;
}
.userImage {
  height: 120rpx;
  width: 120rpx;
  background: #f7f7f7;
  border-radius: 120rpx;
  text-align: center;
  margin-right: 22rpx;
}
.userImage .image {
  position: relative;
  top: 50%;
  margin-top: -60rpx;
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.image {
  height: 84rpx;
  width: 78rpx;
}
.content {
  padding: 30rpx;
}
.content .ul .li {
  display: flex;
  justify-content: center;
  height: 120rpx;
  font-size: 32rpx;
  align-items: center;
  line-height: 120rpx;
}

.item {
  height: 44rpx;
  width: 42rpx;
  margin-right: 38rpx;
}

.content .ul .li .span,
.shareBtn {
  flex: 7;
  border-bottom: 2rpx solid #e4e7ed;
  height: 111rpx;
  line-height: 120rpx;
}

.last {
  border-bottom: none !important;
}

.shareBtn::after {
  border: none;
}

.shareBtn {
  background: transparent;
  font-size: 28rpx;
  padding: 0;
  text-align: left;
  width: 100%;
  color: #303133;
}
.shareBtn image {
  margin-bottom: 0;
}
