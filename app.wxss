/**app.wxss**/
page {
  height: 100%;
  width: 100%;
  background-color: #173771;
  -webkit-text-size-adjust: 100%;
  font-family: "Noto Sans S Chinese";
  font-size: 16px;
  color: #303133;
}
.container {
  height: calc(100% - 30px);
  width: calc(100% - 30px);
  padding: 15px;
}
.fog {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #000;
  opacity: 0.5;
  z-index: 9;
}
.btn {
  display: inline-block;
  font-size: 13px;
  text-align: center;
  padding: 0 15px;
  width: auto;
  height: 30px;
  line-height: 30px;
  border-radius: 17px;
}
.btn-yellow {
  background: #f8b551;
  color: black;
}
.btn-grey {
  border: 1px solid white;
  background: #e0e0e0;
}
.btn-red {
  background-color: #e21414;
  color: red;
}
.btn-white {
  background: transparent;
  color: white;
  border: 1px solid white;
}
.pocker {
  height: 191px;
  width: 124px;
  margin-right: 15px;
}
.memory-pocker {
  position: absolute;
}
.pocker-wrapper {
  position: relative;
  top: 40%;
  left: 50%;
  transform: translate(-50%, -50%);
  height: 191px;
}
.arrow {
  position: relative;
}

.arrow {
  border: 1px solid #ccc;
  border-top-color: transparent;
  border-right-color: transparent;
  margin-left: 20px;
  position: absolute;
  height: 10px;
  width: 10px;
  transform: rotate(-45deg);
}
.arrow-left {
  transform: rotate(45deg);
  left: 50px;
}

.arrow-right {
  transform: rotate(-135deg);
  right: 50px;
}
